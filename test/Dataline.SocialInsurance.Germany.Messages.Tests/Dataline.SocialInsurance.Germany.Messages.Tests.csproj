    <PackageReference Include="RT.Comb" Version="2.3.0" />
    <PackageReference Include="System.Interactive.Async" Version="3.1.1" />
    <PackageReference Include="xunit" Version="2.3.1" />
  </ItemGroup>

  <PropertyGroup Condition=" '$(Configuration)' == 'Debug' ">
    <DebugType>full</DebugType>
  </PropertyGroup>

  <PropertyGroup Condition=" '$(Configuration)' == 'Release' ">
    <DebugType>none</DebugType>
  </PropertyGroup>

  <ItemGroup>
    <DotNetCliToolReference Include="Microsoft.Extensions.SecretManager.Tools" Version="2.0.0" />
  </ItemGroup>

  <ItemGroup>
    <Service Include="{82a7f48d-3b50-4b1e-b82e-3ada8210c358}" />
  </ItemGroup>

  <Target Name="ChangeAliasesOfStrongNameAssemblies" BeforeTargets="FindReferenceAssembliesForReferences;ResolveReferences">
    <ItemGroup>
      <ReferencePath Condition="'%(FileName)' == 'Dguv.Kernpruefung.Uv-1.0'">
        <Aliases>uv10</Aliases>
      </ReferencePath>
      <ReferencePath Condition="'%(FileName)' == 'Dsrv.Kernpruefung.Deuev-1.6'">
        <Aliases>deuev16</Aliases>
      </ReferencePath>
      <ReferencePath Condition="'%(FileName)' == 'Dsrv.Kernpruefung.Deuev-1.7'">
        <Aliases>deuev17</Aliases>
      </ReferencePath>
      <ReferencePath Condition="'%(FileName)' == 'Dsrv.Kernpruefung.Deuev-1.8'">
        <Aliases>deuev18</Aliases>
      </ReferencePath>
    </ItemGroup>
  </Target>
  
