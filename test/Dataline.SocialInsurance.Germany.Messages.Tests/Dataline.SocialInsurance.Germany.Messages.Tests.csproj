      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </None>
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\..\src\Dataline.SocialInsurance.Germany.Messages.Mappings\Dataline.SocialInsurance.Germany.Messages.Mappings.csproj" />
    <ProjectReference Include="..\..\src\Dataline.SocialInsurance.Germany.Messages.Pocos\Dataline.SocialInsurance.Germany.Messages.Pocos.csproj" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.NET.Test.Sdk" Version="15.5.0" />
    <PackageReference Include="xunit.runner.visualstudio" Version="2.3.1" />
    <PackageReference Include="CodeTiger.Core" Version="1.2.0" />
    <PackageReference Include="Dataline.ExtraStandard.Compression" Version="0.4.10" />
    <PackageReference Include="Dataline.ExtraStandard.Encryption" Version="0.4.10" />
    <PackageReference Include="Dataline.ExtraStandard.Extra14" Version="0.4.10" />
    <PackageReference Include="Dataline.ExtraStandard.GkvKomServer" Version="0.4.10" />
    <PackageReference Include="Dataline.ExtraStandard.GkvKomServer.Validation.Extra14" Version="0.4.10" />
